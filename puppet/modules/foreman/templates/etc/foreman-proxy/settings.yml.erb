---
#replace default location of "settings.d"
:settings_directory: /etc/foreman-proxy/settings.d
#:trusted_hosts: ['localhost']
:foreman_url: https://pm0.graphenic.com.au
:daemon: true
:daemon_pid: /var/run/foreman-proxy/foreman-proxy.pid
#:http_port: 8000
:https_port: 8443
:ssl_ca_file: "/var/lib/puppet/ssl/certs/ca.pem"
:ssl_certificate: "/var/lib/puppet/ssl/certs/pm0.graphenic.com.au.pem"
:ssl_private_key: "/var/lib/puppet/ssl/private_keys/pm0.graphenic.com.au.pem"
:foreman_url: "https://<%= @fqdn %>"
:url: "https://<%= @fqdn %>"
# Shared options for virsh DNS/DHCP provider
:virsh_network: default
:log_file: /var/log/foreman-proxy/proxy.log
# WARN, DEBUG, ERROR, FATAL, INFO, UNKNOWN
:log_level: ERROR